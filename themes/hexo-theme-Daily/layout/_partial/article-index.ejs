<%
var isFullUrl = function(str) {
  return /^(https:|http:|ftp:)?\/\//.test(str);
};
%>

<!-- 首页模板 -->
<div class="padding-15"></div>
<div class="container">
  <article class="post">
      <a href="<%- config.root %><%- item.path %>">
    <div class="mdui-card mdui-shadow-0 mdui-hoverable">
      <div class="mdui-card-media">
        <% if (item.cover) { %>
        <a href="<%- config.root %><%- item.path %>">
          <img src="<%- item.cover %>" alt="<%- item.title %>" class="attachment-post-thumbnail" style="border-radius: 0px;">
        </a>
        <% } %>
        <div class="mdui-card-primary">
          <div class="mdui-card-primary-title"><a href="<%- config.root %><%- item.path %>" style="color:black; font-size: 22px"><%- item.title || theme.default_post_title || "Untitled" %></a></div>
          <div class="mdui-card-primary-subtitle" style="padding-top: 5px; font-size: .75rem !important;"><%= item.date.format(config.date_format) %></div>
          <div class="mdui-card-primary-subtitle" style="padding-top: 2px; font-size: .75rem !important;">
            <div class="tags-links">
              <% item.tags.each(function(tag){ %>
              <a href="<%= config.root %>tags/<%= tag.name %>/" style="color:#000;" rel="tag">
                <%- tag.name %>
              </a>
              <% }); %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="padding-25"></div>
  </article>
</div>
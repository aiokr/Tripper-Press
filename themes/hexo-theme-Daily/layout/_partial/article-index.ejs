<%
var isFullUrl = function(str) {
  return /^(https:|http:|ftp:)?\/\//.test(str);
};
%>

<!-- 首页模板 -->
<div class="padding-15"></div>
<div class="container">
  <article class="post">
    <% if (item.cover.length > 0) { %>
      <a href="<%- config.root %><%- item.path %>">
          <img src="<%- item.cover %>" alt="<%- item.title %>" class="attachment-post-thumbnail">
        </a>
    <% } %>
    <h1 class="entry-title">
      <a href="<%- config.root %><%- item.path %>" rel="bookmark">
        <%- item.title || theme.default_post_title || "Untitled" %>
      </a>
    </h1>
    <% if (item.excerpt){ %>
    <div class="entry-content">
      <p>
        <%- item.excerpt %>
      </p>
    </div>
    <% } %>

    <p class="posted-on" style="color: #0000007a;">
    <%= item.date.format(config.date_format) %>
    </p>
    <div class="tags-links" style="color: #0000007a;font-size: .75rem !important">
      <% item.tags.each(function(tag){ %>
      <a href="<%= config.root %>tags/<%= tag.name %>/" rel="tag" style="color: #0000007a;font-size: .75rem !important">
        <%- tag.name %>
      </a>
      <% }); %>
    </div>
  </article>
</div>
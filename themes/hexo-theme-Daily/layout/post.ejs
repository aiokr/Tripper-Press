<div class="content-area">
    <div class="post">
        <div class="padding-25"></div>
        <div class="post-container">
            <div class="mdui-row">
                <div class="mdui-card">
                    <!--头图-->
                    <div class="mdui-card-media">
                        <img src="<%- page.cover %>" />
                    </div>
                    <!--文章信息区-->
                    <div class="mdui-card-primary">
                        <div class="mdui-card-primary-title">
                            <%- page.title %>
                        </div>
                        <div class="mdui-card-primary-subtitle" style="padding-top: 5px; font-size: 16px !important;">
                            <%= page.date.format(config.date_format) %><span> · </span>
                            <% if (page.categories && page.categories.length) { %>
                            <%- list_categories(page.categories, {
                                show_count: false,
                                separator: '<span class="itp-post-cat"></span>',
                                style: 'none'
                            }) %>
                            <% } %>
                        </div>

                    </div>
                    <div class="mdui-divider"></div>
                    <!--正文-->
                    <div class="mdui-card-content article">
                        <%- page.content %>
                    </div>
                    <!--文章底部信息-->
                    <div class="mdui-card-content article">
                        <div class="mdui-text-center">本文发布于 <%= page.date.format(config.date_format) %></div>
                        <% if (page.tags) { %>
                        <div class="mdui-card-primary-subtitle" style="padding-top: 2px; font-size: .75rem !important;">
                            <div class="tags-links">
                                <% page.tags.each(function(tag){ %>
                                <div class="mdui-chip">
                                    <a class="mdui-chip-title" style="color:black"
                                        href="<%= config.root %>tags/<%= tag.name %>/" rel="tag">
                                        <%- tag.name %>
                                    </a>
                                </div>
                                <% }); %>
                            </div>
                        </div>
                    </div>
                    <% } %>
                    <!--评论-->
                    <div class="mdui-card-content itp-post-comment">
                        <%- partial('_partial/comment') %>
                    </div>
                    <!--页面选择器-->
                    <div class="mdui-card-content itp-page-select mdui-row">
                        <div class=" mdui-col-xs-6">
                            <% if (page.prev) { %>
                            <div class="itp-page-select-prev">
                                <a class="mdui-btn mdui-btn-icon" href="<%- config.root %><%- page.prev.path %>"><i
                                        class="mdui-icon material-icons">arrow_back</i></a>
                                <a class="mdui-chip-title" rel="prev"
                                    href="<%- config.root %><%- page.prev.path %>"><%- __('prev')%></a>
                            </div>
                            <% } %>
                        </div>
                        <div class="mdui-col-xs-6">
                            <% if (page.next) { %>
                            <div class="itp-page-select-next  mdui-float-right">
                                <a class="mdui-chip-title" rel="next"
                                    href="<%- config.root %><%- page.next.path %>"><%- __('next')%></a>
                                <a class="mdui-btn mdui-btn-icon" href="<%- config.root %><%- page.next.path %>"><i
                                        class="mdui-icon material-icons">arrow_forward</i></a>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
                <div style="position: fixed;">
                    <% var toc = toc(page.content, {
                            class: 'itp-toc',
                            list_number: false,
                        }) %>
                    <% if(toc.length > 0) { %>
                    <div class="mdui-card mdui-shadow-0">
                        <div>
                            <%-(toc) %>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
            <div class="padding-70"></div>
            <div class="mdui-row">
                <div class="mdui-col-md-2 mdui-col-xs-down"></div>
                <div class="mdui-col-md-8 mdui-col-xs-12">


                </div>
                <div class="mdui-col-md-2 mdui-col-xs-down"></div>
            </div>
            <div class="padding-70"></div>
        </div>
    </div>
</div>
</div>
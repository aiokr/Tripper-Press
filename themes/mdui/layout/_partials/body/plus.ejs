<% if (theme.color.random === 'global') { %>
  <body class="mdui-appbar-with-toolbar mdui-theme-primary-<%= primary_color %> mdui-theme-accent-<%= accent_color %>
  <% if (theme.color.layout === 'dark' || page.layout === 'galleries' || page.layout === 'gallery') { %>
    mdui-theme-layout-dark
  <% } %>
  <% if (!is_category() && !is_tag() && !is_year() && page.layout !== 'galleries' || page.layout !== 'gallery') { %>
    mdui-drawer-body-left
  <% } %>
  <% if (is_category() || is_tag() || is_year()) { %>
    side-content style-fix
  <% } %> drawer-overlay-none" <% if (is_category() || is_tag() || is_year()) { %>onresize="styleChanging()"<% } %>>
<% } else if (theme.color.random === 'post' && is_post()) { %>
  <% if (page.primary_color || page.accent_color) { %>
    <body class="mdui-appbar-with-toolbar mdui-theme-primary-<%= page.primary_color || primary_color %> mdui-theme-accent-<%= page.accent_color || accent_color %>
    <% if (theme.color.layout === 'dark' || page.layout === 'galleries' || page.layout === 'gallery') { %>
      mdui-theme-layout-dark
    <% } %>
    <% if (!is_category() && !is_tag() && !is_year() && page.layout !== 'galleries' || page.layout !== 'gallery') { %>
      mdui-drawer-body-left
    <% } %>
    <% if (is_category() || is_tag() || is_year()) { %>
      side-content style-fix
    <% } %> drawer-overlay-none" <% if (is_category() || is_tag() || is_year()) { %>onresize="styleChanging()"<% } %>>
  <% } else { %>
    <body class="mdui-appbar-with-toolbar mdui-theme-primary-<%= primary_color %> mdui-theme-accent-<%= accent_color %>
    <% if (theme.color.layout === 'dark' || page.layout === 'galleries' || page.layout === 'gallery') { %>
      mdui-theme-layout-dark
    <% } %>
    <% if (!is_category() && !is_tag() && !is_year() && page.layout !== 'galleries' || page.layout !== 'gallery') { %>
      mdui-drawer-body-left
    <% } %>
    <% if (is_category() || is_tag() || is_year()) { %>
      side-content style-fix
    <% } %> drawer-overlay-none" <% if (is_category() || is_tag() || is_year()) { %>onresize="styleChanging()"<% } %>>
  <% } %>
<% } else { %>
  <body class="mdui-appbar-with-toolbar mdui-theme-primary-<%= theme.color.primary_color %> mdui-theme-accent-<%= theme.color.accent_color %>
  <% if (theme.color.layout === 'dark' || page.layout === 'galleries' || page.layout === 'gallery') { %>
    mdui-theme-layout-dark
  <% } %>
  <% if (!is_category() && !is_tag() && !is_year() && page.layout !== 'galleries' || page.layout !== 'gallery') { %>
    mdui-drawer-body-left
  <% } %>
  <% if (is_category() || is_tag() || is_year()) { %>
    side-content style-fix
  <% } %> drawer-overlay-none" <% if (is_category() || is_tag() || is_year()) { %>onresize="styleChanging()"<% } %>>
<% } %>

<% if(page.layout === 'gallery') { %>
<!-- Single Gallery Page -->
<%- partial('_partial/gallery') %>

<% } else if (page.layout === 'html') { %>
<%- page.content %>
<% } else { %>

<!DOCTYPE html>
<html lang="<%= config.language ? config.language : 'en' %>">
<!-- Head tag -->
<%- partial('_partial/head') %>
<% if(page.layout === 'layout') { %>
  
<body>
  <%- page.content %>
</body>
<% } else { %>

<body>
  <!-- Nav -->
  <%- partial('_partial/nav') %>
  <!-- Main Content -->
  <div id="itp-top-cover" class="itp-top-cover" style="background-image: url(<%- page.cover || theme.header.img %>);">
  </div>
  <%- body %>
  <!-- Footer -->
  <%- partial('_partial/footer') %>
  <!-- After footer scripts -->
  <%- partial('_partial/after-footer') %>
</body>
<% } %>

</html>
<% } %>
<div class="itp-post-index">
  <% if(item.style== 'moment') { %>
  <div class="mdui-card-primary">
    <div class="itp-post-index-subtitle">
      <%= item.date.format(config.date_format) %><span> / </span>
      <% item.categories.each(function(categories){ %>
      <a class="itp-post-index-categories" href="<%= config.root %>categories/<%= categories.name %>/" rel="tag">
        <%- categories.name %>
      </a>
      <% }); %>
    </div>
    <div class="mdui-card-primary-title itp-post-index-moment"><%- item.title || theme.default_post_title || "Untitled" %>
    </div>
  </div>
  <% } else { %>
  <div class="mdui-card-primary">
    <div class="mdui-card-primary-title itp-post-index-title "><a
        href="<%- config.root %><%- item.path %>"><%- item.title || theme.default_post_title || "Untitled" %></a>
    </div>
    <div class="itp-post-index-subtitle">
      <%= item.date.format(config.date_format) %><span> / </span>
      <% item.categories.each(function(categories){ %>
      <a class="itp-post-index-categories" href="<%= config.root %>categories/<%= categories.name %>/" rel="tag">
        <%- categories.name %>
      </a>
      <span> / </span>
      <% }); %>
      <%- symbolsCount(item) %>
    </div>
    <div class="itp-post-index-excerpt">
      <a href="<%- config.root %><%- item.path %>">
        <% if (item.excerpt) { %><%- item.excerpt %>
        <% } else { %><%- strip_html(truncate(item.content, { length: theme.auto_excerpt.length })) %>
        <% } %>
      </a>
    </div>
  </div>
  <% } %>
</div>
<%
    var title = '';
    if (page.category) title = page.category;
    if (page.tag) title = "#" + page.tag;
    if (page.archive) {
        if (page.year) title = page.year + (page.month ? '/' + page.month : '');
        else title = __('archive_a');
    }
%>
<div class="content-area">
  <div class="mdui-container">
    <div class="mdui-row">
      <div class="mdui-col-md-1 mdui-col-xs-down"></div>
      <div class="mdui-col-md-10 mdui-col-xs-12">
        <div class="mdui-row">
          <div class="mdui-card itp-post-card">
            <div class="mdui-card-primary">
              <div class="itp-post-title itp-post-title_no_cover title"><%- title %></div>
            </div>
            <section class="mdui-card-content article categories" style="list-style-type: none;">
            <%- list_categories({
            show_count: false,
            amount: 5,
            class: 'archive',
            style: '',
            separator: ''
            }) %>
            </section>
            <div class="mdui-card-content article">
              <% var groupObj = _.groupBy(page.posts.toArray(), function(p){return -p.date.format('YYYY')}) %>
              <% for (var year in groupObj){ %>
              <div class="mdui-card-primary-title"><%- -year %></div>
              <ul class="itp-category-list" style="list-style-type: none;">
                <%- partial('_partial/article-archive', {posts: groupObj[year]}) %>
              </ul>
              <% } %>
              <%- partial('_partial/index-pagination') %>
            </div>
          </div>
        </div>
      </div>
      <div class="mdui-col-md-1 mdui-col-xs-down"></div>
    </div>
  </div>
</div>